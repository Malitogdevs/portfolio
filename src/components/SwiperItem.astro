---
export interface Props {
	title: string,
	id: string,
    description: string,
    url: string,
    technologies: string[],
    img: string,
}

const { title, description, technologies, id, url, img } = Astro.props;
---


<section id={id} class="content flex flex-col lg:flex-row items-center lg:px-8 relative">
    <div class="flex flex-col gap-5 p-4 lg:w-[50%] w-[100%] lg:order-1 order-2 lg-align-items-center align-items-end m-auto lg:justify-center justify-end h-full content-info-wrapper relative">
        <h2 class="title lg:text-[52px] text-[32px]">{title}</h2>
        <p class="description lg:text-[18px] text-[16px]">{description}</p>
        <p class="technologies">
            {
                technologies.map((tech) => {
                    return (
                        <img src={`imgs/language_icons/${tech}_icon.svg`} title={tech} alt={tech} class="icon"/>
                    );
                })
            }
        </p>
        <a href={url} target="_blank" class="bg-pink-600 hover:bg-green-400 text-xl  font-bold py-2 px-4 rounded self-start">Ir a la web</a>
    </div>
    <div class="swiper_parent flex-1 p-4 w-[100%] lg:w-[50%] lg:order-2 order-1 lg:h-[100vh] h-[50vh] lg:relative absolute left-0 top-0 z-9">
        <div class="img_wrapper relative">
            <div class="container transform-container fade-el lg:absolute bottom-0 opacity-0">
                <div class="scroll-wrapper">
                    <img src={`imgs/websites${img}`} class="swiper-image draggable-image" alt="Titulo de la imagen" />
                </div>
            </div>
        </div>
    </div>
</section>
